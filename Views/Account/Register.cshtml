@using e_commerce_store.ViewModels
@model RegisterViewModel
@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Register";
}

<style>

</style>

<div class="card-container">
    <div>
        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Sorry!</b> - @TempData["Error"] </span>
            </div>
        }

        <form class="form" asp-action="Register" asp-controller="Account">
            <p class="title">Register </p>
            <p class="message">Signup now to use the app!</p>
            <label>
                <input required asp-for="Name" placeholder="" type="text" class="input">
                <span>Full Name</span>
                <span asp-validation-for="Name" class="validation-msg"></span>
            </label>

            <label>
                <input required asp-for="UserName" placeholder="" type="text" class="input">
                <span>Username</span>
                <span asp-validation-for="Name" class="validation-msg"></span>
            </label>

            <label>
                <input asp-for="EmailAddress" required placeholder="" type="email" class="input">
                <span>Email</span>
                <span asp-validation-for="EmailAddress" class="validation-msg"></span>
            </label>

            <label>
                <input asp-for="Password" required placeholder="" type="password" class="input">
                <span>Password</span>
                <span asp-validation-for="Password" class="validation-msg"></span>
            </label>
            <label>
                <input asp-for="ConfirmPassword" required placeholder="" type="password" class="input">
                <span>Confirm password</span>
                <span asp-validation-for="ConfirmPassword" class="validation-msg"></span>
            </label>

            <div asp-validation-summary="ModelOnly" class="validation-msg"></div>

            <button class="submit" type="submit">Sign Up</button>
            <p>Do you have an account ? <a asp-action="Login">login</a></p>
        </form>
    </div>
</div>
